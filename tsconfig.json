{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": true,
    "noEmitOnError": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
        "esnext",
        "dom",
        "dom.iterable"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    
    "baseUrl": ".",
    "paths": {
      "@december/utils": ["./packages/utils/src"],
      "@december/utils/*": ["./packages/utils/src/*"],
      "@december/logger": ["./packages/logger/src"],
      "@december/logger/*": ["./packages/logger/src/*"],
      "@december/foundry": ["./packages/foundry/src"],
      "@december/foundry/*": ["./packages/foundry/src/*"],
      "@december/compile": ["./packages/compile/src"],
      "@december/compile/*": ["./packages/compile/src/*"],
      "@december/foundry/hydration": ["./packages/foundry/src/hydration"],
      "@december/december": ["./apps/december/src"],
      "@december/december/*": ["./apps/december/src/*"],
      "@december/mobile": ["./apps/mobile/src"],
      "@december/mobile/*": ["./apps/mobile/src/*"],
      "@december/gurps": ["./packages/gurps/src"],
      "@december/gurps/*": ["./packages/gurps/src/*"],
      "@december/tree": ["packages/tree/src2"],
      "@december/tree/*": ["packages/tree/src2/*"],
      "@december/compiler": ["packages/compiler/src"],
      "@december/compiler/*": ["packages/compiler/src/*"],
      "@december/system": ["./packages/system/src"],
      "@december/system/*": ["./packages/system/src/*"],
      "@december/gca": ["./packages/gca/src"],
      "@december/gca/*": ["./packages/gca/src/*"],
    }
  },
  "exclude": ["node_modules"],
  "include": ["packages/*/src/**/*", "apps/*/src/**/*", "packages/utils/src/range.ts"]
}
