{
  "http.proxyStrictSSL": false,
  // "prettier.requireConfig": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // "javascript.validate.enable": false,
  // "javascript.format.enable": false,
  "eslint.validate": [ "javascript", "typescript" ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
  },
  "files.eol": "\n",
  "editor.tabSize": 2,
  "typescript.preferences.importModuleSpecifier": "relative",
  "stylelint.validate": ["scss"],
  // https://stackoverflow.com/questions/71235277/vscode-intellisense-how-to-resolve-path-aliases-in-scss-module-imports

  "alias-tool.mappings": {
    "@utils": "${folder}/packages/utils/src/styles",
    "@components": "${folder}/apps/gurps-mobile/src/styles/components",
  },
  "path-autocomplete.pathMappings": {
    "@utils": "${folder}/packages/utils/src/styles",
    "@components": "${folder}/apps/gurps-mobile/src/styles/components",
  }
}
